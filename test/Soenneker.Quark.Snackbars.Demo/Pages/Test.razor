@page "/test"

<h1>Snackbar Test</h1>

<SnackbarStack @ref="_snackbarStack" Position="SnackbarLocation.TopEnd">
</SnackbarStack>

<Button Color="Color.Primary" OnClick="@TestSnackbar">
    Test Snackbar
</Button>

@code {
    private SnackbarStack? _snackbarStack;

    private async Task TestSnackbar()
    {
        if (_snackbarStack != null)
        {
            await _snackbarStack.Push("Test message", Color.Success);
        }
    }
}
